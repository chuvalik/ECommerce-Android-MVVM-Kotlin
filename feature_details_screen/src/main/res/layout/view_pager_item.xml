<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/product_image_card_elevation"
    android:layout_marginHorizontal="@dimen/product_image_card_horizontal_margin"
    android:layout_marginVertical="@dimen/product_image_card_vertical_margin"
    app:cardCornerRadius="@dimen/product_image_card_corner_radius">

    <ImageView
        tools:src="@drawable/product_example"
        android:id="@+id/ivProduct"
        android:padding="@dimen/product_image_content_padding"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.cardview.widget.CardView>