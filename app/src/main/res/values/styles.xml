<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Text style-->

    <style name="MainScreenHeader">
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MainScreenHelperTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mavenpro_regular</item>
    </style>

    <style name="MainScreenLocation">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="MainScreenBottomMenuText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
    </style>

    <style name="MainScreenTabText">
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
    </style>

    <style name="HotSalesNew">
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HotSalesTitle">
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HotSalesSubtitle">
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HotSalesButtonText">
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BestSellerDiscountPrice">
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BestSellerDefaultPrice">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BestSellerTitle">
        <item name="android:fontFamily">@font/mavenpro_regular</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FilterBottomDialogTitle">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilterBottomDialogDismissButton">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilterBottomDialogOption">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilterBottomSpinnerText">
        <item name="android:fontFamily">@font/mavenpro_regular</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>


<!--    Bottom Dialog Fragment style -->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_bottom_dialog</item>
    </style>


<!--    SearchView style-->

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mavenpro_regular</item>
    </style>

</resources>